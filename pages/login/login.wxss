.login {
  padding: 20rpx 20rpx;
   position: relative;
     z-index: 100;
}

.login-input {
  height: 90rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid #ededed;
}

.login-input image {
  width: 36rpx;
  height: 45rpx;
  margin-left: 20rpx;
}

.login-input input {
  width: 100%;
  height: 100%;
  margin-left: 20rpx;
  color: #4d4d4d;
  font-size: 32rpx;
}

button {
  margin-top: 60rpx;
  color: #ffffff;
  background: rgba(175, 47, 47, .3);
}

navigator { 
  margin-right: 20rpx;
  height: 80rpx;
  text-align: right;
  font-size: 28rpx;
  color: rgba(175, 47, 47, 0.3);
  line-height: 80rpx;
}

.navigator-hover {
  color: rgba(175, 47, 47, 0.6);
  background: #fff;
}

.button-hover {
  background: rgba(175, 47, 47, .6); 
  color: #fff;
}