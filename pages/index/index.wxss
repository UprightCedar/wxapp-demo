.new-todo {
  height: 120rpx;
  font-style: italic;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-shadow: inset 0 -2px 1px rgba(0, 0, 0, 0.03);
}

.sign-out {
  font-size: 30rpx;
  text-align: right;
  color: rgba(175, 47, 47, 0.15);
  margin-right: 40rpx;
}

.toggle-all {
  width: 120rpx;
  margin-left: 5rpx;
  text-align: center;
  color: rgb(230, 230, 230);
}

.icon-down {
  font-size: 36rpx;
}

.all-completed {
  color: #737373;
}

.not-all {
  color: #e6e6e6;
}

.new-todo input {
  border: none;
  background: rgba(0, 0, 0, 0.003);
  width: 100%;
  height: 100%;
}

.todo-item {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  min-height: 90rpx;
  border-bottom: 1px solid #ededed;
}

.content {
  margin-left: 5rpx;
  padding: 20rpx 80rpx 20rpx 0;
  width: 100%;
  word-break: break-all;
}

.completed {
  color: #d9d9d9;
  text-decoration: line-through;
}

.selected {
  width: 120rpx;
  text-align: center;
  font-size: 60rpx;
  margin-left: 10rpx;
  min-height: 80rpx;
  display: block;
  line-height: 70rpx;
}

.icon-gouxuan {
  color: #bddad5;
}

.icon-yuan {
  color: #ededed;
}

.edit-input {
  width: 100%;
  height: 100%;
  border: 1px solid #999;
  min-height: 80rpx;
  box-shadow: inset 0 -1px 5px 0 rgba(0, 0, 0, 0.2);
  padding-left: 20rpx;
}

.destroy:after {
  content: 'Ã—';
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #cc9a9a;
  font-size: 40rpx;
}

.todo-item:last-child {
  border-bottom: none;
}

.footer {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  color: #777;
  font-size: 28rpx;
  border-top: 1px solid #e6e6e6;
  height: 80rpx;
  padding: 0 20rpx;
  z-index: 100;
}

.filters {
  display: flex;
  flex-direction: row;
}

.filters text {
  margin: 0 5rpx;
  padding: 3rpx 12rpx;
  border: 1px solid transparent;
}

.filters .active {
  border: 1px solid rgba(175, 47, 47, 0.2);
  border-radius: 3px;
}

.show {
  visibility: block;
}

.hidden {
  visibility: hidden;
}

.info {
  text-align: center;
  color: rgba(175, 47, 47, 0.15);
  font-size: 26rpx;
}
